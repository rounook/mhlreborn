@model StairEstate.Entity.proj_project

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<div class="parentDiv panel mainbody panel-body">
    <div class="head form-inline panel-heading" style="color: black">
        <h4>Project Details : @Model.project_id</h4>
    </div>
    @using (Html.BeginForm("Edit", "Projects", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.project_image)
        <br />
        <br />

        <div align="center">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row align-center">
                <label class="control-label col-md-3"></label>
                <img src="@Url.Content(Model.project_image)" width="400px" style="alignment: center" class="col-sm-6 img-thumbnail .img-rounded" />
            </div>

            <br />
            <br />
            <div class="row">

                @*First Column*@
                <div class="form-horizontal col-sm-5">
                    <div class="form-group">
                        <label class="control-label col-md-4">Project Id</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.project_id, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                            @Html.ValidationMessageFor(model => model.project_id, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">Project Initial</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.project_initial, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                            @Html.ValidationMessageFor(model => model.project_initial, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Project Type</label>
                        <div class="col-md-8">
                            @Html.DropDownList("project_type_id", null, htmlAttributes: new { @class = "form-control", @readonly = "" })
                            @Html.ValidationMessageFor(model => model.project_type_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Project Name</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.project_name, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                            @Html.ValidationMessageFor(model => model.project_name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">Project Address</label>
                        <div class="col-md-8">
                            <textarea id="project_address" name="project_address" class="form-control" readonly="">@Model.project_address</textarea>
                            @Html.ValidationMessageFor(model => model.project_address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">Project Status</label>
                        <div class="col-md-8">
                            @Html.DropDownList("project_status", null, htmlAttributes: new { @class = "form-control", @readonly = "", @disabled = "" })
                            @Html.ValidationMessageFor(model => model.project_status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Project Serial</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.project_serial, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                            @Html.ValidationMessageFor(model => model.project_serial, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Project Manager</label>
                        <div class="col-md-8">
                            <datalist id="sp">
                                @{
                                    foreach (var sp in ViewBag.SP)
                                    {
                                        <option value="@sp.emp_code">
                                            @sp.emp_code
                                        </option>
                                    }
                                }
                            </datalist>
                            <input list="sp" name="manager" class="form-control" required="" value="@Model.hr_employee.emp_code" readonly="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Branch</label>
                        <div class="col-md-8">
                            <datalist id="branch">
                                @{
                                    foreach (var b in ViewBag.Branchs)
                                    {
                                        <option value="@b.branch_name">
                                            @b.branch_name
                                        </option>
                                    }
                                }
                            </datalist>
                            <input list="branch" name="branch" class="form-control" required="" value="@Model.sys_branch.branch_name" readonly="">

                        </div>
                    </div>

                </div>
                @*Second Column*@
                <div class="form-horizontal col-sm-5">
                    <div class="form-group">
                        <label class="control-label col-md-4">Start Date</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.project_start_date, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                            @Html.ValidationMessageFor(model => model.project_start_date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">End Date</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.project_end_date, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                            @Html.ValidationMessageFor(model => model.project_end_date, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-4">Handover Date</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.project_actual_handover_date, new { htmlAttributes = new { @class = "form-control", @readonly = "" } })
                            @Html.ValidationMessageFor(model => model.project_actual_handover_date, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-4">Area</label>
                        <div class="col-md-7 input-group">
                            <input readonly="" value="32" class="form-control col-md-6" />
                            <span class="input-group-addon">
                                <select>
                                    <option>Decimal</option>
                                    <option>Katha</option>
                                </select>
                            </span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-small btn-default return" })
    </div>
</div>

<script>



</script>